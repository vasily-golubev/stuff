    \Huge \bf
    \ignorespaces #1\par % добавил \ignorespaces
    \nobreak
    \vskip 40\p@
  }}
\def\@makeschapterhead#1{%
  \vspace*{50\p@}%
  {\parindent \z@ \raggedright
    \Huge \bf
    \ignorespaces #1\par % добавил \ignorespaces
